<div class="min-h-screen bg-black text-white pb-20" data-controller="thumbnail-size day-accordion">
  <!-- Header -->
  <header class="sticky top-0 z-40 bg-gradient-to-b from-black to-black/80 backdrop-blur-sm border-b-2 border-red-700">
    <div class="container mx-auto px-4">
      <div class="py-6">
        <h1 class="text-4xl font-bold text-center bg-gradient-to-r from-red-600 to-yellow-600 bg-clip-text text-transparent">
          OKNOTOK SHOCK COLLAR PORTRAITS
        </h1>
        <p class="text-center text-red-500 mt-2">Burning Man 2025 â€¢ Art Therapy</p>
        
        <!-- Stats -->
        <div class="flex justify-center gap-8 mt-4 text-sm">
          <span class="text-yellow-500"><%= @stats[:total_sessions] %> Sittings</span>
          <span class="text-yellow-500"><%= @stats[:total_photos] %> Photos</span>
          <% @stats[:by_day].each do |day, count| %>
            <span class="text-gray-400"><%= day.capitalize %>: <%= count %></span>
          <% end %>
          <% if current_user&.admin? %>
            <span class="text-gray-400">|</span>
            <%= link_to "All Thumbnails", admin_thumbnails_path, class: "text-blue-400 hover:text-blue-300" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Gallery -->
  <main class="container mx-auto px-4 py-8">
    <% %w[sunday monday tuesday wednesday thursday friday].each do |day| %>
      <% sessions = @sessions_by_day[day] || [] %>
      <% next if sessions.empty? %>
      
      <div class="mb-12" data-day-accordion-target="day" data-day-name="<%= day %>">
        <!-- Day Header -->
        <button 
          data-action="click->day-accordion#toggle"
          class="w-full text-left mb-6 group"
        >
          <div class="flex items-center justify-between py-3 px-4 bg-gradient-to-r from-red-900/30 to-transparent rounded-lg hover:from-red-900/50 transition-colors">
            <h2 class="text-2xl font-bold text-yellow-500">
              <%= day.capitalize %>
              <span class="text-sm text-gray-400 ml-3"><%= sessions.size %> sittings</span>
            </h2>
            <svg class="w-6 h-6 text-yellow-500 transform transition-transform" data-day-accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </button>
        
        <!-- Sittings Grid Container -->
        <div data-day-accordion-target="content" class="">
          <div data-day-accordion-target="grid" data-thumbnail-size-target="grid" class="grid grid-cols-4 gap-4 transition-all duration-300">
            <% sessions.each do |session| %>
              <%= render 'session_card', session: session %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </main>

  <!-- Sticky Footer with Size Slider and Face Mode -->
  <footer class="fixed bottom-0 left-0 right-0 z-50 bg-gradient-to-t from-black via-black/95 to-black/80 backdrop-blur-sm border-t-2 border-red-700">
    <div class="container mx-auto px-4 py-3">
      <div class="flex items-center justify-center gap-6">
        <!-- Size Slider -->
        <div class="flex items-center gap-3">
          <label class="text-yellow-500 text-sm font-semibold">Size:</label>
          <span class="text-gray-400 text-xs">Large</span>
          <input type="range" 
                 data-thumbnail-size-target="slider"
                 data-action="input->thumbnail-size#updateSize"
                 min="2" 
                 max="8" 
                 value="4" 
                 step="1"
                 class="w-48 h-2 bg-red-900 rounded-lg appearance-none cursor-pointer slider"
                 style="background: linear-gradient(to right, #dc2626 0%, #dc2626 33%, #374151 33%, #374151 100%);">
          <span class="text-gray-400 text-xs">Small</span>
          <span data-thumbnail-size-target="count" class="text-yellow-500 text-sm ml-2">(4 per row)</span>
        </div>
        
        <!-- Divider -->
        <div class="w-px h-8 bg-red-700/50"></div>
        
        <!-- Face Mode Checkbox -->
        <div class="flex items-center gap-2">
          <input type="checkbox" 
                 id="face-mode-toggle"
                 data-thumbnail-size-target="faceMode"
                 data-action="change->thumbnail-size#toggleFaceMode"
                 class="w-4 h-4 rounded border-red-700 bg-black text-yellow-500 focus:ring-yellow-500 focus:ring-offset-0">
          <label for="face-mode-toggle" class="text-yellow-500 text-sm font-semibold cursor-pointer select-none">
            Faces Only
          </label>
          <span data-thumbnail-size-target="faceStatus" class="text-gray-400 text-xs ml-1"></span>
        </div>
      </div>
    </div>
  </footer>
</div>