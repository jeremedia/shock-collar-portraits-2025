<% content_for :title, "Edit Tag" %>

<div class="bg-gray-900 text-white p-6 min-h-screen">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-yellow-500 mb-2">Edit Tag</h1>
      <p class="text-gray-400">Update the tag details and settings.</p>
    </div>

    <!-- Form -->
    <div class="bg-gray-800 rounded-lg p-6">
      <%= render 'form' %>
    </div>

    <!-- Delete option -->
    <div class="mt-6 p-4 bg-red-900 bg-opacity-20 border border-red-800 rounded-lg">
      <p class="text-red-300 mb-2">Danger Zone</p>
      <%= button_to "Delete this tag", admin_tag_path(@tag), method: :delete,
          data: { confirm: "Are you sure you want to delete this tag? This cannot be undone." },
          class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors" %>
    </div>
  </div>
</div>