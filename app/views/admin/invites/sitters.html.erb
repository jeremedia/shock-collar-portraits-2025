<%# Admin page for managing sitter invitations %>
<div class="bg-black text-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <%# Header %>
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-3xl font-bold text-yellow-500">Sitter Invitations</h1>
        <%= link_to "‚Üê Back to Admin", admin_invites_path, class: "text-gray-400 hover:text-yellow-500 transition" %>
      </div>

      <%# Stats Bar %>
      <div class="grid grid-cols-4 gap-4 mb-6">
        <div class="bg-gray-900 rounded-lg p-4">
          <div class="text-gray-400 text-sm">Total Emails</div>
          <div class="text-2xl font-bold text-yellow-500"><%= @total_emails %></div>
        </div>
        <div class="bg-gray-900 rounded-lg p-4">
          <div class="text-gray-400 text-sm">Invited</div>
          <div class="text-2xl font-bold text-blue-500"><%= @invited_count %></div>
        </div>
        <div class="bg-gray-900 rounded-lg p-4">
          <div class="text-gray-400 text-sm">Accepted</div>
          <div class="text-2xl font-bold text-green-500"><%= @accepted_count %></div>
        </div>
        <div class="bg-gray-900 rounded-lg p-4">
          <div class="text-gray-400 text-sm">Pending</div>
          <div class="text-2xl font-bold text-orange-500"><%= @pending_count %></div>
        </div>
      </div>

      <%# Progress Bar %>
      <div class="bg-gray-800 rounded-full h-3 mb-2">
        <div class="bg-gradient-to-r from-green-600 to-green-500 h-3 rounded-full transition-all duration-500"
             style="width: <%= (@accepted_count.to_f / @total_emails * 100).round %>%"></div>
      </div>
      <div class="text-sm text-gray-400">
        <%= (@accepted_count.to_f / @total_emails * 100).round(1) %>% of sitters have accepted their invitations
      </div>
    </div>

    <%# Filters %>
    <div class="mb-6 flex gap-2">
      <button data-filter="all" class="filter-btn px-4 py-2 rounded-lg bg-yellow-600 text-black font-semibold">
        All (<%= @total_emails %>)
      </button>
      <button data-filter="not-invited" class="filter-btn px-4 py-2 rounded-lg bg-gray-800 text-gray-300 hover:bg-gray-700">
        Not Invited (<%= @total_emails - @invited_count %>)
      </button>
      <button data-filter="pending" class="filter-btn px-4 py-2 rounded-lg bg-gray-800 text-gray-300 hover:bg-gray-700">
        Pending (<%= @sitters_data.count { |s| s[:invited] && !s[:accepted] && !s[:has_errors] } %>)
      </button>
      <button data-filter="failed" class="filter-btn px-4 py-2 rounded-lg bg-gray-800 text-gray-300 hover:bg-gray-700">
        Failed (<%= @sitters_data.count { |s| s[:has_errors] } %>)
      </button>
      <button data-filter="accepted" class="filter-btn px-4 py-2 rounded-lg bg-gray-800 text-gray-300 hover:bg-gray-700">
        Accepted (<%= @accepted_count %>)
      </button>
    </div>

    <%# Sitter List %>
    <div class="bg-gray-900 rounded-lg overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="bg-gray-800 text-gray-300">
            <th class="px-4 py-3 text-left">Email</th>
            <th class="px-4 py-3 text-center">Sessions</th>
            <th class="px-4 py-3 text-center">Status</th>
            <th class="px-4 py-3 text-center">Invited</th>
            <th class="px-4 py-3 text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @sitters_data.each do |sitter| %>
            <tr class="border-t border-gray-800 hover:bg-gray-800/50 transition sitter-row"
                data-status="<%= sitter[:accepted] ? 'accepted' : (sitter[:has_errors] ? 'failed' : (sitter[:invited] ? 'pending' : 'not-invited')) %>">
              <td class="px-4 py-3">
                <div class="font-mono text-sm"><%= sitter[:email] %></div>
              </td>
              <td class="px-4 py-3 text-center">
                <span class="text-gray-400"><%= sitter[:sessions_count] %></span>
              </td>
              <td class="px-4 py-3 text-center">
                <div class="flex items-center justify-center gap-2">
                  <% if sitter[:accepted] %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-900/50 text-green-400">
                      ‚úÖ Accepted
                    </span>
                  <% elsif sitter[:invited] %>
                    <% if sitter[:has_errors] %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-900/50 text-red-400">
                        ‚ùå Failed to Send
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-900/50 text-orange-400">
                        ‚è≥ Pending
                      </span>
                    <% end %>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-700 text-gray-400">
                      üìß Not Invited
                    </span>
                  <% end %>

                  <% if sitter[:has_errors] %>
                    <button onclick="showErrorDetails('<%= sitter[:email] %>')"
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-600 hover:bg-red-700 text-white transition"
                            title="View error details">
                      üö® <%= sitter[:failed_attempts].count %>
                    </button>
                  <% end %>
                </div>
              </td>
              <td class="px-4 py-3 text-center">
                <% if sitter[:invitation_sent_at] %>
                  <div class="text-xs text-gray-400">
                    <%= sitter[:invitation_sent_at].strftime("%b %d, %Y") %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= time_ago_in_words(sitter[:invitation_sent_at]) %> ago
                  </div>
                <% else %>
                  <span class="text-gray-600">‚Äî</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-center">
                <% if sitter[:accepted] %>
                  <span class="text-gray-500 text-sm">Already joined</span>
                <% else %>
                  <div class="flex items-center justify-center gap-2">
                    <%= form_with url: invite_sitter_admin_invites_path, method: :post, local: false,
                                  class: "inline", data: { turbo: false } do |f| %>
                      <%= hidden_field_tag :email, sitter[:email] %>
                      <button type="submit"
                              class="px-3 py-1 rounded-lg text-sm font-medium transition
                                     <%= sitter[:invited] ? 'bg-blue-600 hover:bg-blue-700 text-white' : 'bg-yellow-600 hover:bg-yellow-700 text-black' %>">
                        <%= sitter[:invited] ? 'üîÑ Resend' : 'üì§ Send Invite' %>
                      </button>
                    <% end %>

                    <% if sitter[:user] && sitter[:user].invitation_token.present? %>
                      <button onclick="copyInviteUrl('<%= sitter[:user].invitation_token %>')"
                              class="px-3 py-1 rounded-lg text-sm font-medium bg-purple-600 hover:bg-purple-700 text-white transition"
                              title="Copy invitation URL to clipboard">
                        üìã Copy URL
                      </button>
                    <% end %>
                  </div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Bulk Actions %>
    <div class="mt-6 p-4 bg-gray-900 rounded-lg">
      <h3 class="text-lg font-semibold text-yellow-500 mb-3">Bulk Actions</h3>
      <div class="flex gap-4">
        <%= form_with url: invite_sitter_admin_invites_path, method: :post, local: false,
                      id: "bulk-invite-form", data: { turbo: false } do |f| %>
          <%= hidden_field_tag :bulk_action, 'not_invited' %>
          <button type="submit" class="px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-black font-semibold rounded-lg transition">
            üìÆ Send Invites to All Non-Invited (<%= @total_emails - @invited_count %>)
          </button>
        <% end %>

        <%= form_with url: invite_sitter_admin_invites_path, method: :post, local: false,
                      id: "bulk-resend-form", data: { turbo: false } do |f| %>
          <%= hidden_field_tag :bulk_action, 'pending' %>
          <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition">
            üîÑ Resend to All Pending (<%= @pending_count %>)
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Error Details Modal -->
<div id="errorModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
  <div class="bg-gray-900 rounded-lg p-6 max-w-2xl w-full mx-4 max-h-96 overflow-y-auto">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-semibold text-white">Invitation Error Details</h3>
      <button onclick="hideErrorDetails()" class="text-gray-400 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    <div id="errorContent" class="space-y-4">
      <!-- Error details will be populated here -->
    </div>
  </div>
</div>

<script>
// Error details data for JavaScript access
const errorData = {
  <% @sitters_data.each do |sitter| %>
    <% if sitter[:has_errors] %>
      "<%= sitter[:email] %>": <%= raw sitter[:failed_attempts].to_json %>,
    <% end %>
  <% end %>
};

// Show error details modal
function showErrorDetails(email) {
  const errors = errorData[email] || [];
  const modal = document.getElementById('errorModal');
  const content = document.getElementById('errorContent');

  if (errors.length === 0) {
    content.innerHTML = '<div class="text-gray-400">No error details available</div>';
  } else {
    content.innerHTML = `
      <div class="text-white font-mono text-sm mb-4">${email}</div>
      <div class="space-y-3">
        ${errors.map((error, index) => `
          <div class="bg-red-900/20 border border-red-700/30 rounded p-3">
            <div class="flex items-center justify-between mb-2">
              <span class="text-red-400 font-semibold">Error #${index + 1}</span>
              <span class="text-gray-400 text-xs">
                ${new Date(error.failed_at).toLocaleString()}
              </span>
            </div>
            <div class="text-red-300 font-semibold mb-1">
              ${error.error_class || 'Unknown Error'}
            </div>
            <div class="text-gray-300 text-sm">
              ${error.error_message || 'No error message available'}
            </div>
          </div>
        `).join('')}
      </div>
      <div class="mt-4 p-3 bg-blue-900/20 border border-blue-700/30 rounded">
        <div class="text-blue-400 font-semibold mb-1">üí° Common Solutions:</div>
        <ul class="text-gray-300 text-sm space-y-1">
          <li>‚Ä¢ Gmail rate limiting - Use bulk resend with delays</li>
          <li>‚Ä¢ Check SMTP credentials in production</li>
          <li>‚Ä¢ Verify email address is valid</li>
          <li>‚Ä¢ Try manual invite using "Copy URL" button</li>
        </ul>
      </div>
    `;
  }

  modal.classList.remove('hidden');
}

// Hide error details modal
function hideErrorDetails() {
  const modal = document.getElementById('errorModal');
  modal.classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('errorModal').addEventListener('click', function(e) {
  if (e.target === this) {
    hideErrorDetails();
  }
});

// Copy invite URL to clipboard
function copyInviteUrl(token) {
  const url = `${window.location.origin}/users/invitation/accept?invitation_token=${token}`;

  // Create a temporary textarea to copy the URL
  const textarea = document.createElement('textarea');
  textarea.value = url;
  textarea.style.position = 'fixed';
  textarea.style.left = '-999999px';
  document.body.appendChild(textarea);
  textarea.select();

  try {
    document.execCommand('copy');
    // Show success feedback
    showNotification('Invitation URL copied to clipboard!');
  } catch (err) {
    // Fallback for modern browsers
    navigator.clipboard.writeText(url).then(() => {
      showNotification('Invitation URL copied to clipboard!');
    }).catch(() => {
      // If all else fails, show the URL in an alert
      alert(`Copy this URL:\n${url}`);
    });
  }

  document.body.removeChild(textarea);
}

// Show temporary notification
function showNotification(message) {
  const notification = document.createElement('div');
  notification.textContent = message;
  notification.className = 'fixed top-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-opacity duration-500';
  document.body.appendChild(notification);

  setTimeout(() => {
    notification.style.opacity = '0';
    setTimeout(() => {
      document.body.removeChild(notification);
    }, 500);
  }, 3000);
}

// Filter functionality
document.addEventListener('DOMContentLoaded', () => {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const rows = document.querySelectorAll('.sitter-row');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update button states
      filterBtns.forEach(b => {
        b.classList.remove('bg-yellow-600', 'text-black');
        b.classList.add('bg-gray-800', 'text-gray-300');
      });
      btn.classList.remove('bg-gray-800', 'text-gray-300');
      btn.classList.add('bg-yellow-600', 'text-black');

      // Filter rows
      const filter = btn.dataset.filter;
      rows.forEach(row => {
        if (filter === 'all') {
          row.style.display = '';
        } else {
          row.style.display = row.dataset.status === filter ? '' : 'none';
        }
      });
    });
  });
});
</script>