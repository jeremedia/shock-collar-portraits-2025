<div class="bg-black text-white p-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2 text-yellow-500">Send Invitation</h1>
      <p class="text-red-400">Invite someone to view the OKNOTOK gallery</p>
    </div>

    <!-- Invite Form -->
    <div class="bg-gray-900 border border-red-600 rounded-lg p-6">
      <%= form_with url: admin_invites_path, local: true do |f| %>
        <div class="mb-6">
          <%= f.label :email, "Email Address", class: "block text-yellow-500 mb-2" %>
          <%= f.email_field :email,
              required: true,
              placeholder: "burner@example.com",
              class: "w-full px-4 py-2 bg-black border border-red-600 rounded text-white placeholder-gray-500 focus:outline-none focus:border-yellow-500" %>
          <p class="text-sm text-gray-400 mt-2">
            They'll receive an invitation to create an account
          </p>
        </div>

        <div class="mb-6">
          <%= f.label :name, "Name (optional)", class: "block text-yellow-500 mb-2" %>
          <%= f.text_field :name,
              placeholder: "Playa Name",
              class: "w-full px-4 py-2 bg-black border border-red-600 rounded text-white placeholder-gray-500 focus:outline-none focus:border-yellow-500" %>
        </div>

        <!-- Admin Checkbox -->
        <div class="mb-6">
          <label class="flex items-start gap-3 p-4 bg-gray-800 border border-gray-700 rounded cursor-pointer hover:border-yellow-600 transition">
            <%= f.check_box :admin, class: "mt-1 h-5 w-5 text-yellow-500 bg-black border-gray-600 rounded focus:ring-yellow-500" %>
            <div class="flex-1">
              <span class="block text-yellow-500 font-semibold">Grant Admin Access</span>
              <p class="text-sm text-gray-400 mt-1">
                Give this user admin privileges to manage the gallery
              </p>

              <div class="mt-3 text-xs text-gray-500">
                <p class="font-semibold text-gray-400 mb-1">Admin privileges include:</p>
                <ul class="space-y-1">
                  <li>• Select hero photos for each sitting</li>
                  <li>• Apply tags for filtering</li>
                  <li>• Mark photos as rejected</li>
                  <li>• Split and merge photo sessions</li>
                  <li>• Access admin dashboard and stats</li>
                </ul>
              </div>
            </div>
          </label>
        </div>

        <div class="flex gap-4">
          <%= f.submit "Send Invitation",
              class: "px-6 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition cursor-pointer" %>
          <%= link_to "Cancel", admin_invites_path,
              class: "px-6 py-2 bg-gray-700 text-white rounded hover:bg-gray-600 transition" %>
        </div>
      <% end %>
    </div>

    <!-- Note about existing users -->
    <div class="mt-6 p-4 bg-gray-900 border border-gray-700 rounded">
      <p class="text-sm text-gray-400">
        <strong class="text-yellow-500">Note:</strong>
        If the email already has an account, they'll be updated with the selected permissions immediately.
        Otherwise, they'll receive an invitation email to create an account.
      </p>
    </div>
  </div>
</div>