<%
  content_for :title, "Admin - Queue Status"
  queue_colors = {
    'attachments' => 'bg-blue-500',
    'face_detection' => 'bg-green-500', 
    'default' => 'bg-purple-500'
  }
%>

<div class="bg-black text-white p-6" data-controller="queue-status" 
     data-queue-status-url-value="<%= admin_queue_status_path(format: :json) %>">
  
  <!-- Header -->
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-yellow-500">Queue Processing Status</h1>
        <p class="text-gray-400 mt-2">Real-time background job monitoring</p>
      </div>
      
      <!-- Auto-refresh indicator -->
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse" data-queue-status-target="indicator"></div>
          <span class="text-sm text-gray-400">Auto-refresh every 5s</span>
        </div>
        <%= link_to "← Back to Admin", admin_path, 
            class: "px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 transition-colors" %>
      </div>
    </div>

    <!-- Overall Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Processing Rate</p>
            <p class="text-2xl font-bold text-white" data-queue-status-target="rate">
              <%= @processing_rate %> jobs/min
            </p>
          </div>
          <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Total Pending</p>
            <p class="text-2xl font-bold text-white" data-queue-status-target="totalPending">
              <%= @queue_stats.values.sum { |q| q[:pending] } %>
            </p>
          </div>
          <div class="w-12 h-12 bg-yellow-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Est. Completion</p>
            <p class="text-lg font-bold text-white" data-queue-status-target="completion">
              <% if @estimated_completion %>
                <%= time_ago_in_words(@estimated_completion) %> from now
              <% else %>
                Calculating...
              <% end %>
            </p>
          </div>
          <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Queue Progress Bars -->
    <div class="space-y-6" data-queue-status-target="queues">
      <% @queue_stats.each do |queue_name, stats| %>
        <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-xl font-semibold text-white capitalize">
                <%= queue_name.humanize %> Queue
              </h3>
              <p class="text-gray-400 text-sm">
                <%= stats[:pending] %> pending • 
                <%= stats[:completed] %> completed • 
                <%= stats[:rate_per_minute] %> jobs/min
              </p>
            </div>
            
            <div class="text-right">
              <div class="text-2xl font-bold text-white">
                <%= stats[:progress] %>%
              </div>
              <div class="text-sm text-gray-400">
                <%= stats[:completed] %> / <%= stats[:total] %>
              </div>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="w-full bg-gray-700 rounded-full h-4 mb-4">
            <div class="<%= queue_colors[queue_name] || 'bg-gray-500' %> h-4 rounded-full transition-all duration-500 ease-out"
                 style="width: <%= stats[:progress] %>%"
                 data-queue="<%= queue_name %>"
                 data-queue-status-target="progressBar">
            </div>
          </div>
          
          <!-- Queue Details -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
            <div>
              <span class="text-gray-400">Pending:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-pending">
                <%= stats[:pending] %>
              </span>
            </div>
            <div>
              <span class="text-gray-400">Completed:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-completed">
                <%= stats[:completed] %>
              </span>
            </div>
            <div>
              <span class="text-gray-400">Rate/hr:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-rate">
                <%= stats[:rate_per_hour] %>
              </span>
            </div>
            <div>
              <span class="text-gray-400">Total:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-total">
                <%= stats[:total] %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Last Updated -->
    <div class="mt-8 text-center text-gray-500 text-sm">
      <span data-queue-status-target="lastUpdated">
        Last updated: <%= Time.current.strftime("%H:%M:%S") %>
      </span>
    </div>
  </div>
</div>