<%
  content_for :title, "Admin - Queue Status"
  queue_colors = {
    'attachments' => 'bg-blue-500',
    'face_detection' => 'bg-green-500', 
    'default' => 'bg-purple-500'
  }
%>

<div class="bg-black text-white p-6" data-controller="queue-status" 
     data-queue-status-url-value="<%= admin_queue_status_path(format: :json) %>">
  
  <!-- Header -->
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-yellow-500">Queue Processing Status</h1>
        <p class="text-gray-400 mt-2">Real-time background job monitoring</p>
      </div>
      
      <!-- Auto-refresh indicator -->
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse" data-queue-status-target="indicator"></div>
          <span class="text-sm text-gray-400">Auto-refresh every 5s</span>
        </div>
        <%= link_to "← Back to Admin", admin_path, 
            class: "px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 transition-colors" %>
      </div>
    </div>

    <!-- Overall Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Processing Rate</p>
            <p class="text-2xl font-bold text-white" data-queue-status-target="rate">
              <%= @processing_rate %> jobs/min
            </p>
          </div>
          <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Total Pending</p>
            <p class="text-2xl font-bold text-white" data-queue-status-target="totalPending">
              <%= @queue_stats.values.sum { |q| q[:pending] } %>
            </p>
          </div>
          <div class="w-12 h-12 bg-yellow-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Pending Invitations</p>
            <p class="text-2xl font-bold text-white" data-queue-status-target="pendingInvitations">
              <%= SolidQueue::Job.where(class_name: "InvitationMailerJob", finished_at: nil).count %>
            </p>
          </div>
          <div class="w-12 h-12 bg-purple-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Est. Completion</p>
            <p class="text-lg font-bold text-white" data-queue-status-target="completion">
              <% if @estimated_completion %>
                <%= time_ago_in_words(@estimated_completion) %> from now
              <% else %>
                Calculating...
              <% end %>
            </p>
          </div>
          <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Queue Progress Bars -->
    <div class="space-y-6" data-queue-status-target="queues">
      <% @queue_stats.each do |queue_name, stats| %>
        <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-xl font-semibold text-white capitalize">
                <%= queue_name.humanize %> Queue
              </h3>
              <p class="text-gray-400 text-sm">
                <%= stats[:pending] %> pending • 
                <%= stats[:completed] %> completed • 
                <%= stats[:rate_per_minute] %> jobs/min
              </p>
            </div>
            
            <div class="text-right">
              <div class="text-2xl font-bold text-white">
                <%= stats[:progress] %>%
              </div>
              <div class="text-sm text-gray-400">
                <%= stats[:completed] %> / <%= stats[:total] %>
              </div>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="w-full bg-gray-700 rounded-full h-4 mb-4">
            <div class="<%= queue_colors[queue_name] || 'bg-gray-500' %> h-4 rounded-full transition-all duration-500 ease-out"
                 style="width: <%= stats[:progress] %>%"
                 data-queue="<%= queue_name %>"
                 data-queue-status-target="progressBar">
            </div>
          </div>
          
          <!-- Queue Details -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
            <div>
              <span class="text-gray-400">Pending:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-pending">
                <%= stats[:pending] %>
              </span>
            </div>
            <div>
              <span class="text-gray-400">Completed:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-completed">
                <%= stats[:completed] %>
              </span>
            </div>
            <div>
              <span class="text-gray-400">Rate/hr:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-rate">
                <%= stats[:rate_per_hour] %>
              </span>
            </div>
            <div>
              <span class="text-gray-400">Total:</span>
              <span class="text-white font-semibold ml-2" data-queue="<%= queue_name %>-total">
                <%= stats[:total] %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Invitation Jobs Summary -->
    <% if @recent_invitation_jobs.present? || @failed_invitation_jobs.present? %>
      <div class="mt-8">
        <h2 class="text-2xl font-bold text-yellow-500 mb-6">Invitation Email Jobs</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Recent Invitation Jobs -->
          <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white">Recent Jobs</h3>
              <div class="text-sm text-gray-400">
                Last <%= @recent_invitation_jobs.count %> jobs
              </div>
            </div>

            <% if @recent_invitation_jobs.any? %>
              <div class="space-y-2 max-h-64 overflow-y-auto">
                <% @recent_invitation_jobs.each do |job| %>
                  <div class="flex items-center justify-between py-2 px-3 bg-gray-800 rounded">
                    <div class="flex-1">
                      <div class="text-sm text-white font-mono">
                        <%= JSON.parse(job.arguments).dig("arguments", 0) rescue "Unknown email" %>
                      </div>
                      <div class="text-xs text-gray-400">
                        <%= time_ago_in_words(job.created_at) %> ago
                      </div>
                    </div>
                    <div class="text-right">
                      <% if job.finished_at %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-900/50 text-green-400">
                          ✅ Completed
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-900/50 text-blue-400">
                          ⏳ Pending
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-gray-400 text-center py-4">
                No recent invitation jobs
              </div>
            <% end %>
          </div>

          <!-- Failed Invitation Jobs -->
          <div class="bg-gray-900 rounded-lg p-6 border border-gray-700">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white">Failed Jobs</h3>
              <div class="text-sm text-gray-400">
                <%= @failed_invitation_jobs.count %> failures
              </div>
            </div>

            <% if @failed_invitation_jobs.any? %>
              <div class="space-y-2 max-h-64 overflow-y-auto">
                <% @failed_invitation_jobs.each do |failed| %>
                  <div class="py-2 px-3 bg-red-900/20 border border-red-700/30 rounded">
                    <div class="text-sm text-white font-mono">
                      <%= JSON.parse(failed.job&.arguments || '{}').dig("arguments", 0) rescue "Unknown email" %>
                    </div>
                    <div class="text-xs text-gray-400 mb-1">
                      Failed <%= time_ago_in_words(failed.created_at) %> ago
                    </div>
                    <div class="text-xs text-red-400">
                      <%= failed.error&.dig("exception_class") %>:
                      <%= failed.error&.dig("message")&.truncate(60) %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="mt-4">
                <%= link_to sitters_admin_invites_path,
                    class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg transition-colors" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                  Retry Failed Invitations
                <% end %>
              </div>
            <% else %>
              <div class="text-gray-400 text-center py-4">
                No failed invitation jobs ✅
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Last Updated -->
    <div class="mt-8 text-center text-gray-500 text-sm">
      <span data-queue-status-target="lastUpdated">
        Last updated: <%= Time.current.strftime("%H:%M:%S") %>
      </span>
    </div>
  </div>
</div>