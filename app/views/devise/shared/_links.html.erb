<%- if controller_name != 'sessions' %>
  <div class="mt-6 text-center">
    <span class="text-gray-400 text-sm">Already have an account?</span>
    <%= link_to "Sign in", new_session_path(resource_name), class: "text-yellow-500 hover:text-yellow-400 text-sm font-medium ml-1" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-6 text-center">
    <span class="text-gray-400 text-sm">Don't have an account?</span>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-yellow-500 hover:text-yellow-400 text-sm font-medium ml-1" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-4 text-center">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-400 hover:text-gray-300 text-sm" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mt-3 text-center">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-400 hover:text-gray-300 text-sm" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mt-3 text-center">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-gray-400 hover:text-gray-300 text-sm" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="mt-6">
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-700"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-gray-900 text-gray-400">Or continue with</span>
      </div>
    </div>
    <div class="mt-4 space-y-2">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
            data: { turbo: false },
            class: "w-full px-4 py-2 border border-gray-700 rounded-lg text-gray-300 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-yellow-500 transition-colors" %>
      <% end %>
    </div>
  </div>
<% end %>
