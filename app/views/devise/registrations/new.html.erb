<div class="flex-grow flex items-center justify-center px-4 bg-black">
  <div class="max-w-md w-full bg-gray-900 border-2 border-red-600 rounded-lg p-8">
    <h2 class="text-4xl font-bold text-center mb-8 text-yellow-500">JOIN THE COLLECTIVE</h2>
    <p class="text-center text-red-400 mb-8">Create Your Account</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-semibold text-yellow-500 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-4 py-2 bg-gray-800 border border-red-600 rounded text-white placeholder-gray-500 focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition duration-200" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-semibold text-yellow-500 mb-2" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-red-400 mb-2">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full px-4 py-2 bg-gray-800 border border-red-600 rounded text-white placeholder-gray-500 focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition duration-200" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-sm font-semibold text-yellow-500 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full px-4 py-2 bg-gray-800 border border-red-600 rounded text-white placeholder-gray-500 focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition duration-200" %>
      </div>

      <div class="mb-6">
        <%= f.submit "CREATE ACCOUNT",
            class: "w-full bg-red-600 text-white py-3 px-4 rounded font-bold text-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 focus:ring-offset-gray-900 transition duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
