<%
  session_number = sprintf('%03d', @session.session_number)
  day_name = @session.session_day.day_name if @session.session_day
  title_parts = ["Hero"]
  title_parts << day_name.capitalize if day_name
  title_parts << "Session #{session_number}"
  hero_title = title_parts.join(" - ")
%>
<% content_for :title, hero_title %>
<div class="h-full flex items-center justify-center p-0 sm:p-8 bg-black text-white"
     <% if current_user&.admin? %>data-controller="admin-tagger" data-admin-tagger-session-id-value="<%= @session.id %>"<% end %>>
  <div class="max-w-7xl w-full h-full flex flex-col">
      <% if @photo.image.attached? %>
        <div class="<%= current_user&.admin? ? 'sm:flex gap-0' : '' %> border-0 sm:border-4 border-red-600 rounded-none sm:rounded-lg overflow-hidden flex-grow">
          <!-- Photo Container -->
          <div class="<%= current_user&.admin? ? 'sm:flex-grow' : 'w-full' %> flex flex-col h-full">
          <!-- Navigation Bar (moved to top) -->
          <div class="bg-gray-900 border-b-2 sm:border-b-4 border-red-600 flex justify-between items-center">
            <%= link_to session_path(@session.id), class: "px-2 py-2 text-yellow-500 font-bold text-lg sm:text-2xl hover:text-yellow-400 transition-colors" do %>
              <span class="hidden sm:inline">Session #<%= sprintf('%03d', @session.session_number) %></span>
              <span class="sm:hidden">#<%= sprintf('%03d', @session.session_number) %></span>
            <% end %>
            <div class="flex">
              <% if @prev_hero_id %>
                <%= link_to hero_path(@prev_hero_id), class: "px-3 sm:px-4 py-2 sm:py-3 bg-gray-800 text-yellow-500 hover:bg-gray-700 border-l border-red-600 transition" do %>
                  <span class="sm:hidden">‚Üê</span>
                  <span class="hidden sm:inline">‚Üê Previous</span>
                <% end %>
              <% else %>
                <span class="px-3 sm:px-4 py-2 sm:py-3 bg-gray-800/50 text-gray-600 border-l border-red-600/50 cursor-not-allowed">
                  <span class="sm:hidden">‚Üê</span>
                  <span class="hidden sm:inline">‚Üê Previous</span>
                </span>
              <% end %>

              <%= link_to heroes_path, class: "px-3 sm:px-4 py-2 sm:py-3 bg-gray-800 text-yellow-500 hover:bg-gray-700 border-l border-red-600 transition font-semibold" do %>
                <span class="sm:hidden">‚Üë</span>
                <span class="hidden sm:inline">All Heroes</span>
              <% end %>

              <% if @next_hero_id %>
                <%= link_to hero_path(@next_hero_id), class: "px-3 sm:px-4 py-2 sm:py-3 bg-gray-800 text-yellow-500 hover:bg-gray-700 border-l border-red-600 transition" do %>
                  <span class="sm:hidden">‚Üí</span>
                  <span class="hidden sm:inline">Next ‚Üí</span>
                <% end %>
              <% else %>
                <span class="px-3 sm:px-4 py-2 sm:py-3 bg-gray-800/50 text-gray-600 border-l border-red-600/50 cursor-not-allowed">
                  <span class="sm:hidden">‚Üí</span>
                  <span class="hidden sm:inline">Next ‚Üí</span>
                </span>
              <% end %>
            </div>
          </div>

          <!-- Full Image with progressive loading and swipe navigation -->
          <div class="relative bg-black flex-grow flex items-center justify-center overflow-hidden p-3"
               data-controller="hero-image swipe-navigation"
               data-hero-image-full-src-value="<%= @photo.image.variant(:large).url %>"
               <% if @next_photo %>data-hero-image-next-src-value="<%= @next_photo.image.variant(:large).url %>"<% end %>
               <% if @prev_photo %>data-hero-image-prev-src-value="<%= @prev_photo.image.variant(:large).url %>"<% end %>
               data-swipe-navigation-next-url-value="<%= @next_hero_id ? hero_path(@next_hero_id) : '' %>"
               data-swipe-navigation-prev-url-value="<%= @prev_hero_id ? hero_path(@prev_hero_id) : '' %>"
               data-swipe-navigation-index-url-value="<%= heroes_path %>">
            <img data-hero-image-target="image"
                 src=""
                 class="max-w-full max-h-full object-contain transition-opacity duration-500"
                 alt="Hero portrait"
                 style="opacity: 0;" />

            <!-- Loading spinner overlay -->
            <div data-hero-image-target="spinner" class="absolute inset-0 flex items-center justify-center pointer-events-none">
              <div class="animate-spin rounded-full h-16 w-16 border-4 border-yellow-500 border-t-transparent"></div>
            </div>

            <!-- Swipe hints for mobile -->
            <div class="sm:hidden absolute top-4 left-1/2 transform -translate-x-1/2 text-yellow-500/50 text-xs pointer-events-none animate-pulse">
              ‚Üì Swipe down for all heroes
            </div>
            <% if @prev_hero_id %>
              <div class="sm:hidden absolute left-2 top-1/2 transform -translate-y-1/2 text-yellow-500/30 pointer-events-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </div>
            <% end %>
            <% if @next_hero_id %>
              <div class="sm:hidden absolute right-2 top-1/2 transform -translate-y-1/2 text-yellow-500/30 pointer-events-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            <% end %>
          </div>

          <!-- Metadata -->
          <div class="bg-gray-900 border-t-2 border-red-600 px-3 sm:px-6 py-3 sm:py-4 flex justify-center items-center gap-2 sm:gap-6 text-xs sm:text-sm">
            <div class="flex items-center gap-1 sm:gap-2">
              <span class="text-red-400 hidden sm:inline">Day:</span>
              <span class="text-yellow-500 font-semibold text-xs sm:text-sm">
                <span class="hidden sm:inline"><%= @session.session_day.day_name %>, </span><%= @session.session_day.date.strftime('%b %d') %>
              </span>
            </div>
            <span class="text-gray-600 hidden sm:inline">‚Ä¢</span>
            <div class="flex items-center gap-1 sm:gap-2">
              <span class="text-red-400 hidden sm:inline">Time:</span>
              <span class="text-yellow-500 font-semibold">
                <%
                  # Use actual photo taken time from EXIF data, already in PST
                  photo_time = @photo.photo_taken_at
                  if photo_time
                %>
                  <%= photo_time.in_time_zone('America/Los_Angeles').strftime('%-l:%M:%S %p') %>
                <% else %>
                  <%= @session.started_at.in_time_zone('America/Los_Angeles').strftime('%-l:%M %p') %>
                <% end %>
              </span>
            </div>
            <span class="text-gray-600 hidden sm:inline">‚Ä¢</span>
            <div class="flex items-center gap-1 sm:gap-2">
              <span class="text-red-400 hidden sm:inline">Photo:</span>
              <span class="text-yellow-500 font-semibold text-xs sm:text-sm">#<%= @photo.position %> of <%= @session.photo_count %></span>
            </div>
          </div>
          </div><!-- End photo container -->

          <% # Admin sidebar - only shown for admins and on sm+ screens %>
          <% if current_user&.admin? %>
            <!-- Admin Sidebar (Desktop) -->
            <div data-admin-tagger-target="panel"
                 class="hidden sm:flex sm:flex-col w-64 xl:w-96 bg-gray-900 border-l border-red-600 p-3 overflow-y-auto h-full">

              <!-- Two column layout on xl screens -->
              <div class="flex-grow xl:grid xl:grid-cols-2 xl:gap-4">
                <!-- First Column: Gender, Quality, Expression -->
                <div>
              <!-- Gender Selection -->
              <div class="mb-4">
                <h4 class="text-xs text-gray-500 mb-2 font-semibold uppercase">Gender</h4>
                <div class="space-y-1">
                  <button data-admin-tagger-target="genderButton"
                          data-gender="female"
                          data-action="click->admin-tagger#setGender"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    üë© Female
                  </button>
                  <button data-admin-tagger-target="genderButton"
                          data-gender="male"
                          data-action="click->admin-tagger#setGender"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    üë® Male
                  </button>
                  <button data-admin-tagger-target="genderButton"
                          data-gender="non-binary"
                          data-action="click->admin-tagger#setGender"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    üåà Non-Binary
                  </button>
                  <button data-admin-tagger-target="genderButton"
                          data-gender="not-set"
                          data-action="click->admin-tagger#setGender"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    ‚ùì Not Set
                  </button>
                </div>
              </div>

              <!-- Quality Selection -->
              <div class="mb-4">
                <h4 class="text-xs text-gray-500 mb-2 font-semibold uppercase">Quality</h4>
                <div class="space-y-1">
                  <button data-admin-tagger-target="qualityButton"
                          data-quality="ok"
                          data-action="click->admin-tagger#setQuality"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    üëç OK
                  </button>
                  <button data-admin-tagger-target="qualityButton"
                          data-quality="not-ok"
                          data-action="click->admin-tagger#setQuality"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    üëé Not OK
                  </button>
                  <button data-admin-tagger-target="qualityButton"
                          data-quality="awesome"
                          data-action="click->admin-tagger#setQuality"
                          class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                    üåü Awesome
                  </button>
                </div>
              </div>

              <!-- Expression Tags -->
              <div class="mb-4">
                <h4 class="text-xs text-gray-500 mb-2 font-semibold uppercase">Expression</h4>
                <div class="space-y-1">
                  <% ["smiling", "serious", "laughing", "surprised", "shocked", "confused", "orgasm", "pain", "stoic", "jazz hands"].each do |tag| %>
                    <button data-admin-tagger-target="tagButton"
                            data-tag="<%= tag %>"
                            data-context="expression"
                            data-action="click->admin-tagger#toggleTag"
                            class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                      <%= tag.capitalize %>
                    </button>
                  <% end %>
                </div>
              </div>
                </div><!-- End first column -->

                <!-- Second Column: Appearance, Accessories -->
                <div>
              <!-- Appearance Tags -->
              <div class="mb-4">
                <h4 class="text-xs text-gray-500 mb-2 font-semibold uppercase">Appearance</h4>
                <div class="space-y-1">
                  <% ["blonde", "brunette", "redhead", "bald", "extensions", "beard", "mustache", "tattoos", "piercings", "topless", "eyes closed", "mouth open"].each do |tag| %>
                    <button data-admin-tagger-target="tagButton"
                            data-tag="<%= tag %>"
                            data-context="appearance"
                            data-action="click->admin-tagger#toggleTag"
                            class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                      <%= tag.split.map(&:capitalize).join(' ') %>
                    </button>
                  <% end %>
                </div>
              </div>

              <!-- Accessory Tags -->
              <div class="mb-4">
                <h4 class="text-xs text-gray-500 mb-2 font-semibold uppercase">Accessories</h4>
                <div class="space-y-1">
                  <% ["hat", "sunglasses", "goggles", "glasses", "mask", "costume", "jewelry", "body paint"].each do |tag| %>
                    <button data-admin-tagger-target="tagButton"
                            data-tag="<%= tag %>"
                            data-context="accessory"
                            data-action="click->admin-tagger#toggleTag"
                            class="w-full px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500 transition-all text-left">
                      <%= tag.split.map(&:capitalize).join(' ') %>
                    </button>
                  <% end %>
                </div>
              </div>
                </div><!-- End second column -->
              </div><!-- End grid -->

              <!-- Clear All Button at bottom (full width, aligned to bottom) -->
              <div class="mt-auto pt-3 border-t border-gray-700">
                <button data-action="click->admin-tagger#clearAllTags"
                        class="w-full px-2 py-1 text-xs bg-red-900 text-red-400 hover:bg-red-600 hover:text-white rounded transition-all">
                  Clear All Tags
                </button>
              </div>

              <!-- Hidden hero card data for controller to read -->
              <div class="hidden" data-hero-filter-target="heroCard"
                   data-gender="<%= @session.detected_gender&.downcase || 'not-set' %>"
                   data-quality="<%= @session.quality || 'ok' %>"
                   data-tags="<%= @session.all_tags_list.join('|') %>"
                   data-appearance-tags="<%= @session.appearance_tag_list.join('|') %>"
                   data-expression-tags="<%= @session.expression_tag_list.join('|') %>"
                   data-accessory-tags="<%= @session.accessory_tag_list.join('|') %>">
              </div>
            </div><!-- End admin sidebar -->
          <% end %>
        </div><!-- End flex container -->

        <% # Mobile admin panel - only shown for admins on mobile %>
        <% if current_user&.admin? %>
          <!-- Admin Panel (Mobile) -->
          <div data-admin-tagger-target="mobilePanel"
               class="sm:hidden bg-gray-900 border-x-4 border-b-4 border-red-600 rounded-b-lg p-4 max-h-96 overflow-y-auto">

            <!-- Compact mobile layout -->
            <div class="space-y-3">
              <!-- Gender -->
              <div>
                <h4 class="text-xs text-gray-500 mb-1 font-semibold uppercase">Gender</h4>
                <div class="grid grid-cols-2 gap-1">
                  <button data-admin-tagger-target="genderButton"
                          data-gender="female"
                          data-action="click->admin-tagger#setGender"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    üë© Female
                  </button>
                  <button data-admin-tagger-target="genderButton"
                          data-gender="male"
                          data-action="click->admin-tagger#setGender"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    üë® Male
                  </button>
                  <button data-admin-tagger-target="genderButton"
                          data-gender="non-binary"
                          data-action="click->admin-tagger#setGender"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    üåà Non-Binary
                  </button>
                  <button data-admin-tagger-target="genderButton"
                          data-gender="not-set"
                          data-action="click->admin-tagger#setGender"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    ‚ùì Not Set
                  </button>
                </div>
              </div>

              <!-- Quality -->
              <div>
                <h4 class="text-xs text-gray-500 mb-1 font-semibold uppercase">Quality</h4>
                <div class="grid grid-cols-3 gap-1">
                  <button data-admin-tagger-target="qualityButton"
                          data-quality="ok"
                          data-action="click->admin-tagger#setQuality"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    üëç OK
                  </button>
                  <button data-admin-tagger-target="qualityButton"
                          data-quality="not-ok"
                          data-action="click->admin-tagger#setQuality"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    üëé Not OK
                  </button>
                  <button data-admin-tagger-target="qualityButton"
                          data-quality="awesome"
                          data-action="click->admin-tagger#setQuality"
                          class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                    üåü Awesome
                  </button>
                </div>
              </div>

              <!-- All Tags in compact grid -->
              <div>
                <h4 class="text-xs text-gray-500 mb-1 font-semibold uppercase">Tags</h4>
                <div class="flex flex-wrap gap-1">
                  <!-- Expression -->
                  <% ["smiling", "serious", "laughing", "surprised", "shocked", "confused", "orgasm", "pain", "stoic", "jazz hands"].each do |tag| %>
                    <button data-admin-tagger-target="tagButton"
                            data-tag="<%= tag %>"
                            data-context="expression"
                            data-action="click->admin-tagger#toggleTag"
                            class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                      <%= tag.capitalize %>
                    </button>
                  <% end %>
                  <!-- Appearance -->
                  <% ["blonde", "brunette", "redhead", "bald", "extensions", "beard", "mustache", "tattoos", "piercings", "topless", "eyes closed", "mouth open"].each do |tag| %>
                    <button data-admin-tagger-target="tagButton"
                            data-tag="<%= tag %>"
                            data-context="appearance"
                            data-action="click->admin-tagger#toggleTag"
                            class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                      <%= tag.split.map(&:capitalize).join(' ') %>
                    </button>
                  <% end %>
                  <!-- Accessories -->
                  <% ["hat", "sunglasses", "goggles", "glasses", "mask", "costume", "jewelry", "body paint"].each do |tag| %>
                    <button data-admin-tagger-target="tagButton"
                            data-tag="<%= tag %>"
                            data-context="accessory"
                            data-action="click->admin-tagger#toggleTag"
                            class="px-2 py-1 text-xs font-medium bg-gray-800 text-gray-400 border border-gray-700 rounded hover:border-yellow-500">
                      <%= tag.split.map(&:capitalize).join(' ') %>
                    </button>
                  <% end %>
                </div>
              </div>

              <!-- Clear All -->
              <button data-action="click->admin-tagger#clearAllTags"
                      class="w-full px-2 py-1 text-xs bg-red-900 text-red-400 hover:bg-red-600 hover:text-white rounded">
                Clear All Tags
              </button>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center">
          <p class="text-2xl text-gray-500">Photo not available</p>
        </div>
      <% end %>
    </div>
</div>

<style>
  /* Transitions */
  [data-hero-image-target="spinner"] {
    transition: opacity 0.3s ease-out;
  }
  [data-hero-image-target="image"] {
    transition: opacity 0.5s ease-in-out;
  }
</style>